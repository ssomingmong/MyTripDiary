<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_top"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/main_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="   My\n   Trip     여행의 시작과 끝\n   Diary"
        android:textSize="15sp"
        android:textStyle="bold" />


    <View
        android:id="@+id/main_title_hr"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#000000" />


    <FrameLayout
        android:id="@+id/main_middle"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1" >

        <TextView
            android:id="@+id/start"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="30dp"
            android:textSize="30sp"
            android:text="출발지" />

        <ImageView
            android:id="@+id/arrowview"
            android:layout_width="142dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="130dp"
            android:layout_marginTop="30dp"
            app:srcCompat="@drawable/traffic_arrow" />

        <TextView
            android:id="@+id/location1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="290dp"
            android:layout_marginTop="30dp"
            android:text="장소 1"
            android:textSize="30sp" />

        <TextView
            android:id="@+id/traffic1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="120dp"
            android:text="1. 교통수단"
            android:textSize="30sp" />

        <Button
            android:id="@+id/car"
            android:layout_width="wrap_content"
            android:layout_height="63dp"
            android:layout_marginTop="180dp"
            android:backgroundTint="#000000"
            android:layout_marginLeft="30dp"
            android:cornerRadius="2dp"
            android:shape="rectangle"
            android:text="자가용"
            android:textSize="20sp" />

        <Button
            android:id="@+id/taxi"
            android:layout_width="105dp"
            android:layout_height="63dp"
            android:layout_marginLeft="150dp"
            android:layout_marginTop="180dp"
            android:backgroundTint="#000000"
            android:cornerRadius="2dp"
            android:shape="rectangle"
            android:text="택시"
            android:textSize="20sp" />

        <Button
            android:id="@+id/airplane"
            android:layout_width="wrap_content"
            android:layout_height="63dp"
            android:layout_marginTop="180dp"
            android:layout_marginLeft="270dp"
            android:backgroundTint="#000000"
            android:cornerRadius="2dp"
            android:shape="rectangle"
            android:text="비행기"
            android:textSize="20sp" />

        <Button
            android:id="@+id/train"
            android:layout_width="105dp"
            android:layout_height="63dp"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="260dp"
            android:backgroundTint="#000000"
            android:cornerRadius="2dp"
            android:shape="rectangle"
            android:text="기차"
            android:textSize="20sp" />

        <Button
            android:id="@+id/bus"
            android:layout_width="105dp"
            android:layout_height="63dp"
            android:layout_marginLeft="150dp"
            android:layout_marginTop="260dp"
            android:backgroundTint="#000000"
            android:cornerRadius="2dp"
            android:shape="rectangle"
            android:text="버스"
            android:textSize="20sp" />

        <Button
            android:id="@+id/etc"
            android:layout_width="105dp"
            android:layout_height="63dp"
            android:layout_marginLeft="270dp"
            android:layout_marginTop="260dp"
            android:backgroundTint="#000000"
            android:cornerRadius="2dp"
            android:shape="rectangle"
            android:text="기타"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="360dp"
            android:layout_marginLeft="30dp"
            android:textSize="30sp"
            android:text="2. 소요 시간" />

        <EditText
            android:id="@+id/timetaken"
            android:layout_width="345dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="440dp"
            android:backgroundTint="#FFFFFF"
            android:drawablePadding="8dp"
            android:color="#000000"
            android:width="20dp"
            android:hint=""
            android:padding="8dp"
            android:textColor="#000000"
            android:textSize="30sp" />

        <Button
            android:id="@+id/traffic_next"
            android:layout_width="102dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="300dp"
            android:layout_marginTop="550dp"
            android:backgroundTint="#FFFFFF"
            android:textColor="#000000"
            android:cornerRadius="2dp"
            android:shape="rectangle"
            android:text="다음"
            android:textSize="20sp" />

    </FrameLayout>


    <FrameLayout
        android:id="@+id/main_bottom"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_gravity="bottom">

        <View
            android:id="@+id/main_bottom_hr"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#000000" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/btn_home"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="#00000000"
                android:scaleType="centerInside"
                android:src="@drawable/home_btn"
                android:contentDescription="홈 버튼" />

            <ImageButton
                android:id="@+id/btn_plus"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="#00000000"
                android:scaleType="centerInside"
                android:src="@drawable/plus_btn4"
                android:contentDescription="플러스 버튼" />

            <ImageButton
                android:id="@+id/btn_record"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="#00000000"
                android:scaleType="centerInside"
                android:src="@drawable/record_btn3"
                android:contentDescription="기록 버튼" />

        </LinearLayout>

    </FrameLayout>


</LinearLayout>

